{
  "compilerOptions": {
    "target": "ES6",            
    "module": "ES6",            
    "outDir": "./static/main/ts/dist",
    "rootDir": "./static/main/ts/src",  
    "strict": true,               
    "esModuleInterop": true,      
    "skipLibCheck": true,         
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true             
  },
  "include": [
    "./static/main/ts/src/**/*"     
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}